<h1> <%= @movie['title'] %> - Episode <%= @movie['episodeID'] %> </h1>
<p> <%= @movie['openingCrawl'] %> </p>

<div>
  <b> Director: </b> <span> <%= @movie['director'] %> </span>
</div>
<div>
  <b> Productor(es): </b> <span> <%= @movie['producers'] %> </span>
</div>
<div>
  <b> Fecha de estreno: </b> <span> <%= @movie['releaseDate'] %> </span>
</div>

</br>

<div class="movie_associates">
  <b> Personajes: </b>
  <ul>
    <% @characters.each do |character| %>
    <li>
      <%= link_to character['node']['name'], character_path(character_name: character['node']['name']) %>
    </li>
    <% end %>
  </ul>
  <b> Naves: </b>
  <ul>
    <% @starships.each do |starship| %>
    <li>
      <%= link_to starship['node']['name'], starship_path(starship_name: starship['node']['name']) %>
    </li>
    <% end %>
  </ul>
  <b> Planetas: </b>
  <ul>
    <% @planets.each do |planet| %>
    <li>
      <%= link_to planet['node']['name'], planet_path(planet_name: planet['node']['name']) %>
    </li>
    <% end %>
  </ul>
</div>
